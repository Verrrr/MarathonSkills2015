<Page
    x:Class="MarathonSkills2015.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarathonSkills2015"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" d:DesignHeight="737.5" d:DesignWidth="972">


    <Grid>
        <Frame Grid.Row="0" x:FieldModifier="public" x:Name="NavigationFrame">
        </Frame>

        <Frame Grid.Row="1" x:FieldModifier="public" x:Name="MainFrame">
        </Frame>

        <Border Grid.Row="2"  Background="#00903e" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Opacity="0.81">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Name="TimerLog" Text="timer" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Foreground="White"/>
            </StackPanel>
        </Border>

        <Grid.RowDefinitions>
            <RowDefinition x:FieldModifier="public" x:Name="NavRowDefinition" Height="48"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
    </Grid>

</Page>
